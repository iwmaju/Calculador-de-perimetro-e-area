print ("Calculador de perimetro e área de um retângulo")

altura = float (input("Digite quanto de altura o retângulo tem:"))
largura = float (input("Digite quanto de largura o retângulo tem:"))
area = largura * altura
perimetro  = 2 * (largura + altura)

print ("A área do retângulo é:", area)
print ("O perimetro do retângulo é:", perimetro)
